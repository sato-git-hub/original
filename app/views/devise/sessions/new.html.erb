<div style="max-width: 700px; margin-top: 100px;" class="mx-auto">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <h2 class="text-2xl text-black font-bold text-center mb-15">ログイン</h2>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div style="display: flex; align-items: center; width: 100%; padding: 20px 0;">
    <div style="width: 150px; flex-shrink: 0; font-weight: 500; font-size: 16px; padding-left: 10px;">
      <%= f.label :email, class: "block text-black font-bold md:text-right mb-1 md:mb-0 pr-4" do %>
        メールアドレス<br>
      <% end %>
    </div>
    <div style="flex-grow: 1; text-align: center; font-size: 20px; font-weight: bold; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
      <%= f.email_field :email,
              autofocus: true, 
              autocomplete: "email",
              placeholder: "メールアドレス",
              class: "bg-gray-200 appearance-none border-2 border-gray-400 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>

    </div>
    <div style="width: 120px; flex-shrink: 0;"></div>
  </div>

  <div style="display: flex; align-items: center; width: 100%; padding: 20px 0;">
    <div style="width: 150px; flex-shrink: 0; font-weight: 500; font-size: 16px; padding-left: 10px;">
      <%= f.label :password, class: "block text-black font-bold md:text-right mb-1 md:mb-0 pr-4" do %>
              パスワード
      <% end %>
    </div>
    <div style="flex-grow: 1; text-align: center; font-size: 20px; font-weight: bold; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
      <%= f.password_field :password,
              autocomplete: "current-password",
              placeholder: "パスワード",
              class: "bg-gray-200 appearance-none border-2 border-gray-400 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
    </div>
    <div style="width: 120px; flex-shrink: 0;"></div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div style="display: flex; align-items: center; width: 100%; padding: 50px 50px 20px;">
      <div class="mx-auto">
        <span><%= f.check_box :remember_me %></span>
        <span><%= f.label :remember_me, "ログイン情報を保持" %></span>
      </div>
    </div>
  <% end %>

    <div class="flex justify-center mb-20">
      <button
        type="submit"
        class="py-3 px-14 font-bold rounded bg-blue-400 text-white hover:shadow-teal-md transition-all">
        送信
      </button>
    </div>
  <% end %>

  <div class="text-center font-bold text-lg">
    <%= link_to "新規登録はこちら", new_user_registration_path, class: "inline-block border-b" %>
  </div>
</div>




      





