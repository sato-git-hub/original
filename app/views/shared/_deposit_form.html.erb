<h2 class="text-2xl text-center font-bold" style="margin: 20px 0;">振込先口座情報</h2> 
<div class="lg:max-w-200 mx-auto">
  <%= form_with model: @deposit,
              url: @deposit.persisted? ? deposit_path : deposit_path do |f| %>

    <!-- 金融機関名 -->
    <div class="flex items-center" style="width: 100%; padding: 10px 0;">
      <div style="width: 180px; flex-shrink: 0; font-weight: 500; font-size: 16px; padding-left: 10px;">
        <%= f.label :bank_name, class: "block text-black font-bold md:text-right mb-1 md:mb-0 pr-4" do %>
          金融機関名<br>
          <% unless f.object.persisted? %>
            <span class="text-white bg-red-500 font-normal text-sm ml-2 p-0.5 rounded-md">
              必須
            </span>
          <% end %>
        <% end %>
      </div>
      <div style="flex-grow: 1;">
        <%= f.text_field :bank_name,
          placeholder: "例：〇〇銀行",
          class: "bg-gray-200 appearance-none border-2 border-gray-400 rounded w-full py-1 px-4 text-gray-700 focus:outline-none focus:bg-white focus:border-purple-500" %>
      </div>
      <div style="width: 100px; flex-shrink: 0;"></div>
    </div>

    <!-- 支店名 -->
    <div class="flex items-center" style="width: 100%; padding: 10px 0;">
      <div style="width: 180px; flex-shrink: 0; font-weight: 500; font-size: 16px; padding-left: 10px;">
        <%= f.label :branch_name, class: "block text-black font-bold md:text-right mb-1 md:mb-0 pr-4" do %>
          支店名<br>
          <% unless f.object.persisted? %>
            <span class="text-white bg-red-500 font-normal text-sm ml-2 p-0.5 rounded-md">
              必須
            </span>
          <% end %>
        <% end %>
      </div>
      <div style="flex-grow: 1;">
        <%= f.text_field :branch_name,
          placeholder: "例：〇〇支店",
          class: "bg-gray-200 appearance-none border-2 border-gray-400 rounded w-full py-1 px-4 text-gray-700 focus:outline-none focus:bg-white focus:border-purple-500" %>
      </div>
      <div style="width: 100px; flex-shrink: 0;"></div>
    </div>

    <!-- 口座番号 -->
    <div class="flex items-center" style="width: 100%; padding: 10px 0;">
      <div style="width: 180px; flex-shrink: 0; font-weight: 500; font-size: 16px; padding-left: 10px;">
        <%= f.label :account_number, class: "block text-black font-bold md:text-right mb-1 md:mb-0 pr-4" do %>
          口座番号<br>
          <% unless f.object.persisted? %>
            <span class="text-white bg-red-500 font-normal text-sm ml-2 p-0.5 rounded-md">必須</span>
          <% end %>
        <% end %>
      </div>
      <div style="flex-grow: 1;">
        <%= f.text_field :account_number,
          placeholder: "例：1234567",
          class: "bg-gray-200 appearance-none border-2 border-gray-400 rounded w-full py-1 px-4 text-gray-700 focus:outline-none focus:bg-white focus:border-purple-500" %>
      </div>
      <div style="width: 100px; flex-shrink: 0;"></div>
    </div>

    <!-- 口座名義 -->
    <div class="flex items-center" style="width: 100%; padding: 10px 0;">
      <div style="width: 180px; flex-shrink: 0; font-weight: 500; font-size: 16px; padding-left: 10px;">
        <%= f.label :account_holder, class: "block text-black font-bold md:text-right mb-1 md:mb-0 pr-4" do %>
          口座名義<br>
          <% unless f.object.persisted? %>
            <span class="text-white bg-red-500 font-normal text-sm ml-2 p-0.5 rounded-md">必須</span>
          <% end %>
        <% end %>
      </div>
      <div style="flex-grow: 1;">
        <%= f.text_field :account_holder,
          placeholder: "例：ヤマダタロウ",
          class: "bg-gray-200 appearance-none border-2 border-gray-400 rounded w-full py-1 px-4 text-gray-700 focus:outline-none focus:bg-white focus:border-purple-500" %>
      </div>
      <div style="width: 100px; flex-shrink: 0;"></div>
    </div>

    <!-- ラジオボタン -->
    <div class="flex items-center" style="width: 100%; padding: 10px 0;">
      <div style="width: 180px; flex-shrink: 0; font-weight: 500; font-size: 16px; padding-left: 10px;">
        <%= f.label :radio_group, class: "block text-black font-bold md:text-right mb-1 md:mb-0 pr-4" do %>
          口座種別<br>
          <% unless f.object.persisted? %>
            <span class="text-white bg-red-500 font-normal text-sm ml-2 p-0.5 rounded-md">必須</span>
          <% end %>
        <% end %>
      </div>
      <div style="flex-grow: 1; display: flex; gap: 20px; align-items: center;">
        <%= f.radio_button :radio_group, "普通", id: "ordinary" %>
        <%= f.label :radio_group, "普通", for: "ordinary" %>

        <%= f.radio_button :radio_group, "当座", id: "current" %>
        <%= f.label :radio_group, "当座", for: "current" %>
      </div>
    </div>

    <!-- 送信ボタン -->
    <div class="flex justify-center mt-6">
      <%= f.submit "登録する", class: "bg-blue-500 hover:bg-purple-700 text-white font-bold py-2 px-6 rounded" %>
    </div>

  <% end %>
</div>
</div>