  <header class="bg-white fixed top-0 left-0 h-25 w-full z-10">
  <div class="flex justify-between container h-full mx-auto items-center">
  <div>
    <%= link_to user_path(current_user) do %>
      <% if current_user.avatar.attached? %>
        <%= image_tag current_user.avatar.variant(
        resize_to_fill: [300, 300, { gravity: "North" }]
        ), class: "h-auto w-20 rounded-full" %>
      <% else %>
        <%= image_tag "default_avatar.jpg", class: "h-auto w-20 rounded-full" %>
      <% end %>
    <% end %>
  </div>
    <nav>
      <ul class="flex">
        <li><%= link_to "クリエーターを探す", portfolios_path %></li>
        <li class="ml-4"><%= link_to "リクエストを探す", requests_path %></li>
      </ul>
    </nav>
    </div>
  </header>