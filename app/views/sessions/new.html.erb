
 
<!--width: 100%; max-width: 672px-->
<%=form_with url: login_path, method: :post, class: "w-full max-w-2xl mx-auto", local: true, data: { turbo: false } do |f|%>
<p class="text-2xl text-black font-bold text-center mb-5">ログイン</p>
      <!-- メールアドレス -->
      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
          <%= f.label :email, class: "block text-black font-bold md:text-right mb-1 md:mb-0 pr-4" do %>
            メールアドレス<br>
          <% end %>
        </div>

        <div class="md:w-2/3">
          <%= f.email_field :email,
            placeholder: "",
            class: "bg-gray-200 appearance-none border-2 border-gray-400 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
        </div>
      </div>

      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
          <%= f.label :password, class: "block text-black font-bold md:text-right mb-1 md:mb-0 pr-4" do %>
            パスワード<br>
          <% end %>
        </div>

        <div class="md:w-2/3">
          <%= f.password_field :password,
            placeholder: "",
            class: "bg-gray-200 appearance-none border-2 border-gray-400 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
        </div>
      </div>
      <div class="flex justify-center">
        <button
          type="submit"
          class="py-3 px-14 font-bold rounded-3xl bg-blue-400 text-white hover:shadow-teal-md transition-all">
          送信
        </button>
      </div>
<%end%>

